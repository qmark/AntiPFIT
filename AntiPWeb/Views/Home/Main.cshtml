
@{
    ViewBag.Title = "Main";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
@using AntiPShared
@model AntiPShared.Plagiarism
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
<p>Use this area to provide additional information.</p>





<form action="" method="post" enctype="multipart/form-data">

    <label for="file">Filename:</label>
    <input type="file" name="file" id="file" />

    <input type="submit" />
</form>
<hr/>

<hr />

<button type="button" onclick="location.href='@Url.Action("Test", "Home")'"></button>
<div class="container">
    <div class="wholebar row">
        <div class="col-sm-8">
            <p class="leftbar" id="inputText">
                @{
                    if (Model != null)
                    {
                        @Html.Raw(@Model.AllPlagiarismHtmlText)
                    }
                }
            </p>
        </div>
        <div class=" col-sm-4">
            <nav class="leftbar slidemenu">

                <!-- Item 1 -->
                <input type="radio" name="slideItem" id="slide-item-1" class="slide-toggle" checked />
                <label for="slide-item-1"><i class="icon fas fa-search"></i><span>Search Engines</span></label>

                <!-- Item 2 -->
                <input type="radio" name="slideItem" id="slide-item-2" class="slide-toggle" />
                <label for="slide-item-2"><i class="icon fas fa-database"></i><span>Local DB</span></label>

                <!-- Item 3 -->
                <input type="radio" name="slideItem" id="slide-item-3" class="slide-toggle" />
                <label for="slide-item-3"><i class="icon fas fa-camera"></i><span>From picture</span></label>

                <div class="clear"></div>

                <!-- Bar -->
                <div class="slider">
                    <div class="bar"></div>
                </div>
                @if (Model != null)
                {
                    <ul>

                        @foreach (var x in @Model.PlagiarismDB.DocumentIdToDBWordsIndexes.Keys)
                        {
                            <li class="option">
                                <span class="percent" onclick="dbHighlight(@x)"> @{var lol = Convert.ToDouble(Model.PlagiarismDB.DocumentIdToInitialWordsIndexes[x].Count) / Convert.ToDouble(@Model.WordCount) * 100;} @lol  %</span>
                                <span class="reslink" onclick="dbHighlight(@x)"> @x </span>
                                @*<button class="view-link" onclick="location.href='@Url.Action("Source", "Home", new {id = @x})'">View Link</button>*@
                                <a href="@Url.Action("SourceDB", "Home", new { id = x })" target="_blank">View Link</a>

                            </li>

                        }

                    </ul>

                    <hr/>

                    <ul>

                        @foreach (var x in @Model.PlagiarismWeb.UrlToWebPageWordsIndexes.Keys)
                        {
                            <li class="option">
                                <span class="percent" onclick="webHighlight('@x')"> @{var lol = Convert.ToDouble(Model.PlagiarismWeb.UrlToInitialWordsIndexes[x].Count) / Convert.ToDouble(@Model.WordCount) * 100;} @lol %</span>
                                <span class="reslink" onclick="webHighlight('@x')"> @x</span>
                                @*<button class="view-link" onclick="location.href='@Url.Action("Source", "Home", new {id = @x})'">View Link</button>*@
                                <a href="@Url.Action("SourceUrl", "Home", new { id = @HttpUtility.UrlEncode(x) })" target="_blank">View Link</a>

                            </li>

                        }

                    </ul>
                }




